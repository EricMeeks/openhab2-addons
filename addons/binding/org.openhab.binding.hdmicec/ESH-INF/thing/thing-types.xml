<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="hdmicec"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- Sample Thing Type -->
    <thing-type id="pulseEightCec">
        <label>Pulse-Eight HdmiCec adapter</label>
        <description>Pulse-Eight HdmiCec adapter</description>

        <channels>
            <channel id="power" typeId="power"/>
        </channels>
        
        <config-description>
            <parameter name="cecClientPath" type="text" required="true">
                <label>cec-client executable path</label>
                <description>e.g. /usr/local/bin/cec-client</description>
            </parameter>
            <parameter name="comPort" type="text" required="true">
                <label>Device com port</label>
                <description>e.g. /dev/ttyACM1</description>
            </parameter>
            <parameter name="pollInterval" type="integer" required="true">
                <label>Poll interval</label>
                <description>Polling interval in seconds to check if the device still has power. Set to 0 to disable polling.</description>
                <default>60</default>
            </parameter>
            <parameter name="ignoreUnknownState" type="boolean" required="true">
                <label>Ignore unknown state</label>
                <description>If set the unknown power state of the cec adapter will be ignored. This can be used to ignore wrong reports of this state from the adapter.</description>
                <default>60</default>
            </parameter>
        </config-description>
    </thing-type>

    <!-- Sample Channel Type -->
    <channel-type id="power">
        <item-type>Switch</item-type>
        <label>Power</label>
        <description>Power on/off your device</description>
    </channel-type>

</thing:thing-descriptions>
